import Header from '../components/Header'
import ProductCard from '../components/ProductCard'
export default function Home({products}){ return ( <div> <Header /> <main className="container mx-auto px-4 py-8"> <h1 className="text-3xl font-bold mb-6">Featured Products</h1> <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6"> {products.map(p=> <ProductCard key={p.id} product={p} />)} </div> </main> </div> ) }

export async function getStaticProps(){ const res = await fetch('http://localhost:3000/api/products') const products = await res.json() return { props: { products } } }
